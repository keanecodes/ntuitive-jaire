<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/JdarkerGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/profileBar"
        android:paddingHorizontal="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingVertical="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="Hey Johnson"
            android:fontFamily="@font/roboto_medium"
            android:textSize="22sp"
            android:textColor="@color/Jyellow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_person_circle_outline"
            android:gravity="right" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_connect_red"
            android:text="@string/connect_btn"
            android:textColor="@color/Jred"/>

    </LinearLayout>

    <TextView
        android:text="Exercises"
        android:textSize="36sp"
        android:textColor="@color/Jyellow"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/exercisePager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="20dp"
        android:paddingEnd="40dp"
        android:paddingBottom="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewExercise"
    app:cardBackgroundColor="#494949"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/shoulder_press"
                android:layout_marginVertical="40dp"
                android:layout_width="200dp"
                android:layout_height="300dp"/>
            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:layout_alignBottom="@id/image"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/trackType"
                    android:fontFamily="@font/roboto_light"
                    android:text="Follow Along"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textColor="@color/Jyellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/exerciseName"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Shoulder\nPress"
                    android:textSize="28sp"
                    android:textColor="@color/Jyellow"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/equipment"
                    android:fontFamily="@font/roboto_thin"
                    android:text="+ SENSORS"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:textColor="@color/Jyellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>